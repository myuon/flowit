{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/sdk" },
    { "path": "./apps/web" },
    { "path": "./apps/api" }
  ]
}
